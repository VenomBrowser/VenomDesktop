{
  "appId": "io.ohs.starboard",
  "productName": "STARBOARD",
  "generateUpdatesFilesForAllChannels": true,
  "asar": true,
  "directories": {
    "output": "compiled",
    "buildResources": "static/icons"
  },
  "files": ["build/**/*", "package.json", "static/**/*"],
  "publish": "github",
  "linux": {
    "category": "Network",
    "target": [
      {
        "target": "AppImage",
        "arch": ["ia32", "x64"]
      },
      {
        "target": "deb",
        "arch": ["ia32", "x64"]
      }
    ]
  },
  "mac": {
    "category": "public.app-category.navigation"
  },
  "fileAssociations": [
    {
      "name": "Document",
      "description": "Starboard",
      "role": "Viewer",
      "ext": "html"
    },
    {
      "name": "Document",
      "description": "Starboard",
      "role": "Viewer",
      "ext": "pdf"
    },
    {
      "name": "Document",
      "description": "Starboard",
      "role": "Viewer",
      "ext": "js"
    },
    {
      "name": "Document",
      "description": "Starboard",
