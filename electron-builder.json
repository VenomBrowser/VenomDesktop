{
  "appId": "com.starboard.standard",
  "productName": "Starboard Standard",
  "generateUpdatesFilesForAllChannels": true,
  "asar": true,
  "directories": {
    "output": "packages",
    "buildResources": "static/icons"
  },
  "files": ["build/**/*", "package.json", "static/**/*"],
  "publish": "github",
  "linux": {
    "category": "Network",
    "target": [
      {
        "target": "AppImage",
        "arch": ["ia32", "x64"]
      },
      {
        "target": "deb",
        "arch": ["ia32", "x64"]
      }
    ]
  },
  "mac": {
    "category": "public.app-category.navigation"
  },
  "fileAssociations": [
    {
      "name": "Document",
      "description": "Starboard Standard",
      "role": "Viewer",
      "ext": "html"
    }
  ]
}
